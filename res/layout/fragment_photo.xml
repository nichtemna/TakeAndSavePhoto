<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/frag_photo_tv_nophotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_photos" />

    <ImageView
        android:id="@+id/frag_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:padding="5dip" >

        <ImageButton
            android:id="@+id/frag_photo_imb_remove_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_main_selector"
            android:padding="5dip"
            android:src="@drawable/ic_remove" />

        <ImageButton
            android:id="@+id/frag_photo_imb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dip"
            android:layout_toLeftOf="@+id/frag_photo_imb_remove_photo"
            android:background="@drawable/button_main_selector"
            android:padding="5dip"
            android:src="@drawable/ic_right" />

        <ImageButton
            android:id="@+id/frag_photo_imb_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@+id/frag_photo_imb_camera"
            android:background="@drawable/button_main_selector"
            android:padding="5dip"
            android:src="@drawable/ic_left" />

        <ImageButton
            android:id="@+id/frag_photo_imb_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_main_selector"
            android:padding="5dip"
            android:src="@drawable/ic_switch_camera" />
    </RelativeLayout>

</RelativeLayout>